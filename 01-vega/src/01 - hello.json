{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "01 - data.json"
    },
    "mark": "bar",
    "encoding": {
        "y": {
            "field": "a",
            "type": "nominal",
            "axis": {
                "title": "a value",
                "labelFontSize": 14,
                "titleFontSize": 16
            }
        },
        "x": {
            "aggregate": "average",
            "field": "b",
            "type": "quantitative",
            "axis": {
                "title": "Average of b",
                "labelFontSize": 14,
                "titleFontSize": 16
            }
        }
    },
    "width": 800,
    "height": 300
}